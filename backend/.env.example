# ========================================
# AI Lead IQ Backend - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env to version control!

# ========================================
# 1. SUPABASE CONFIGURATION (REQUIRED)
# ========================================
# Get these from https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Optional: Only needed for admin operations
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# 2. GEMINI API CONFIGURATION (REQUIRED)
# ========================================
# Free tier: Get from https://aistudio.google.com/app/apikey
# Limits: 15 requests/min, 1M tokens/day
GEMINI_API_KEY=AIzaSyCyFE0rZ58xUjiSgbYyD-MdzDI-7s_xQZI

# ========================================
# 3. MINIMAX API (OPTIONAL - For Voice AI)
# ========================================
# Get from MiniMax dashboard
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here

# ========================================
# 4. TWILIO (OPTIONAL - For Phone Calls)
# ========================================
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# 5. SECURITY CONFIGURATION (REQUIRED)
# ========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your_jwt_secret_here_min_32_characters
ENCRYPTION_KEY=your_encryption_key_here_min_32_characters

# ========================================
# 6. REDIS CONFIGURATION (REQUIRED for Batch Calls)
# ========================================
# Local: Use Docker - docker run -d -p 6379:6379 redis:7-alpine
# Cloud: Use free tier from https://upstash.com or https://redis.com
REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ========================================
# 7. SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# 8. GDPR & DATA RETENTION
# ========================================
DATA_RETENTION_YEARS=2

# ========================================
# 9. VAPI AI CONFIGURATION (For Voice Calls)
# ========================================
# Get API key from: https://dashboard.vapi.ai/settings/api-keys
VAPI_API_KEY=your_vapi_api_key_here
# Get Assistant ID from: https://dashboard.vapi.ai/assistants
VAPI_ASSISTANT_ID=78dd932e-957a-464b-bc20-4078a7aa5269
# Get Phone Number ID from: https://dashboard.vapi.ai/phone-numbers
VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id_here
# Your backend webhook URL (use ngrok for local testing)
VAPI_SERVER_URL=https://your-backend-url.com/api/vapi/webhook

# ========================================
# 10. GOOGLE CLOUD (OPTIONAL - Only for production)
# ========================================
# Only needed if deploying to Google Cloud Run
# GOOGLE_CLOUD_PROJECT=your-project-id
