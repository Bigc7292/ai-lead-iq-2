# Google Cloud Secret Manager Configuration
# In production (Cloud Run), secrets are fetched automatically from GCP Secret Manager.
# For local development, you can use this .env file to override secrets.

# Project ID (Required for local Secret Manager testing)
GOOGLE_CLOUD_PROJECT=monospace-13

# Supabase Configuration
# If not set here, will attempt to fetch from Secret Manager
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# MiniMax API Configuration
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_base64_32

# Redis Configuration
# If REDIS_URL is set, it takes precedence
REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Security & GDPR
ENCRYPTION_KEY=your_encryption_key_here
DATA_RETENTION_YEARS=2

# Server Configuration
PORT=3000
NODE_ENV=development
